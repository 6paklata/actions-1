{
  "name": "automatic-releases",
  "version": "0.0.0",
  "private": true,
  "description": "Generate automatic releases whenever changes land on master",
  "main": "dist/index.js",
  "license": "MIT",
  "config": {
    "eslintPaths": "src/**/*.ts __tests__/**/*.ts .*.js *.js",
    "prettierPaths": "**/*.{json,md,yaml,yml} !package.json"
  },
  "scripts": {
    "build": "ncc build src/index.ts",
    "test": "jest --silent",
    "clean": "rm -rf  node_modules yarn-error.log dist",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint $npm_package_config_eslintPaths",
    "lint:prettier": "prettier --list-different $npm_package_config_prettierPaths",
    "lintfix": "yarn run lintfix:eslint && yarn run lintfix:prettier",
    "lintfix:eslint": "eslint --fix $npm_package_config_eslintPaths",
    "lintfix:prettier": "prettier --write $npm_package_config_prettierPaths"
  },
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^1.1.0",
    "@octokit/rest": "^16.30.1",
    "@types/lodash": "^4.14.141",
    "globby": "^10.0.1",
    "md5-file": "^4.0.0"
  },
  "devDependencies": {
    "nock": "^11.3.5"
  },
  "eslintIgnore": [
    "!.*.js"
  ]
}
